<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dows.rbac.mapper.RbacRoleMapper">


    <!--分页查询角色-->
    <select id="selectRbacRolePage" parameterType="org.dows.rbac.query.RbacRoleQuery" resultType="org.dows.rbac.vo.RbacRoleVo">
        SELECT
        t1.id,
        t1.pid,
        t1.inherit,
        t1.role_name,
        t1.name_letters,
        t1.role_code,
        t1.role_icon,
        t1.descr,
        t1.app_id,
        t1.tenant_id
        FROM rbac_role t1
        WHERE 1=1
        <if test="rbacRoleQuery.id != null">
            AND t1.id = #{rbacRoleQuery.id}
        </if>

        <if test="rbacRoleQuery.roleCode != null and rbacRoleQuery.roleCode != ''">
            AND t1.role_code = #{rbacRoleQuery.roleCode}
        </if>
        <if test="rbacRoleQuery.roleName != null and rbacRoleQuery.roleName != ''">
            AND t1.role_name = #{rbacRoleQuery.roleName}
        </if>

    </select>

</mapper>
